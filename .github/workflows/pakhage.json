{
  "name": "html-to-windows-app",
  "version": "1.0.0",
  "description": "Convert HTML files into a Windows executable using Electron",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dist": "electron-builder --win --x64"
  },
  "author": "Your Name",
  "license": "MIT",
  "devDependencies": {
    "electron": "^29.0.0",
    "electron-builder": "^24.13.3"
  },
  "build": {
    "appId": "com.example.htmltoapp",
    "productName": "HTMLToWindowsApp",
    "files": [
      "src/**/*",
      "main.js",
      "package.json"
    ],
    "win": {
      "target": ["nsis", "portable"],
      "artifactName": "${productName}-${version}-${arch}.${ext}"
    }
  }
}
